{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["DOM", "ESNext"],
    "allowJs": true,
    "checkJs": false,
    "jsx": "react",
    "outDir": "./build",
    "rootDir": "./src",
    "removeComments": true,
    "noEmit": true,
    "pretty": true,
    "skipLibCheck": true,
    "strict": false,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl":"./",
    "paths": {
      "@src/": ["src/"]
  }
  },
  "include": [
    "./src/**/*","./declaration.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}